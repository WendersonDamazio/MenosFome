<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:backgroundTint="#ECECEC"
    tools:context=".SegundaTela">

    <TextView
        android:id="@+id/Bemvindo"
        android:layout_width="161dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Bem Vindos!"
        android:textColor="#005DCC"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="166dp"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#E11818"
        android:text="Saiba mais!"
        android:textColor="#FFFFFF"
        android:textColorLink="#FF0000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="416dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bemvindo"
        app:srcCompat="@drawable/combatefome" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="407dp"
        android:layout_height="284dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="O aplicativo MenosFome é uma plataforma inovadora que tem como objetivo combater a fome na cidade do Recife, em Pernambuco. Desenvolvido com base na tecnologia, o MenosFome tem como propósito conectar doadores e pessoas em situação de vulnerabilidade alimentar, para que juntos possam contribuir para diminuir a fome na região.  Por meio do MenosFome, doadores podem disponibilizar alimentos excedentes de suas casas, empresas e restaurantes, evitando assim o desperdício de alimentos e contribuindo para a diminuição da fome na cidade. Os usuários também podem fazer doações financeiras, que serão direcionadas para a compra de alimentos ou para apoiar organizações que atuam na luta contra a fome."
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>